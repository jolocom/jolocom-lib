{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "removeComments": true,
        "moduleResolution": "node",
        "noLib": false,
        "preserveConstEnums": true,
        "declaration": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./js/",
        "rootDir": "./ts",
        "experimentalDecorators": true
    },
    "filesGlob": [
        "./ts/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "exclude": [
        "./js",
        "./tests/**/*"
    ]
}
