{
  "name": "jolocom-lib",
  "version": "5.2.1",
  "description": "Unified library for interacting with the Jolocom identity solution",
  "license": "Apache-2.0",
  "main": "js/index.js",
  "typings": "js/index.d.ts",
  "files": [
    "js",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "check": "tsc",
    "#test": "heft test --coverage",
    "test": "nyc --reporter=lcov --reporter=text-summary mocha --exit",
    "clean": "rm -rf ./js",
    "test:watch": "heft test --watch",
    "test:debug": "mocha --inspect -w ./tests/**/*.test.ts",
    "test:integration": "nyc mocha --require ts-node/register ./tests/**/*.integration.ts --exit",
    "generate-api-docs": "typedoc ./ts",
    "start": "heft test --watch",
    "build": "heft build --clean",
    "build:watch": "heft build",
    "lint": "heft eslint"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/types.ts",
      "**/*.types.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jolocom/jolocom-lib.git"
  },
  "keywords": [
    "Jolocom",
    "Self-Sovereign Identity"
  ],
  "author": "Jolocom Dev <dev@jolocom.com>",
  "contributors": [
    "Eugeniu Rusu <eugeniu@jolocom.com>",
    "Natascha Wittenberg <natascha@jolocom.com>",
    "Charles Cunningham <charles@jolocom.com>",
    "Lukas Kaser <lukas@jolocom.com>",
    "Mina Nagy Zaki <mnzaki@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/jolocom/jolocom-lib/issues"
  },
  "homepage": "https://github.com/jolocom/jolocom-lib#readme",
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "tslib": "^2.3.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bip39": "^2.4.2",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/node": "^11.9.4",
    "@types/sinon-chai": "^3.2.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "chai": "^4.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "reflect-metadata": "^0.1.13",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.14.2",
    "@rushstack/eslint-config": "^2.4.0",
    "@rushstack/heft": "^0.38.0",
    "@rushstack/heft-node-rig": "^1.0.31",
    "@types/heft-jest": "1.0.2",
    "@types/hdkey": "~2.0.0",
    "@types/create-hash": "~1.2.2",
    "@types/jsonld": "~1.5.6"
  },
  "dependencies": {
    "@hawkingnetwork/ed25519-hd-key-rn": "^1.0.1",
    "@jolocom/jolo-did-registrar": "^1.0.0",
    "@jolocom/jolo-did-resolver": "^1.0.0",
    "@jolocom/local-resolver-registrar": "^1.0.1",
    "@jolocom/native-core": "^1.0.0",
    "@jolocom/protocol-ts": "^0.5.4",
    "@jolocom/vaulted-key-provider": "^0.7.4",
    "@types/sinon": "^9.0.5",
    "bip39": "^3.0.2",
    "class-transformer": "0.3.1",
    "create-hash": "^1.2.0",
    "did-resolver": "2.0.0",
    "ethereumjs-util": "^7.1.2",
    "hdkey": "^2.0.1",
    "json-logic-js": "^2.0.0",
    "jsonld": "^1.6.1",
    "jsontokens": "^1.0.0",
    "node-fetch": "^3.0.0",
    "rfc4648": "^1.4.0",
    "secrets.js-grempe": "^1.1.0"
  }
}
